<div class="row">
  <div class="col-12">
    <h1 class="page-title text-center"><%= "Profile : " +  @user.name.to_s.humanize %></h1>
    <hr/>
  </div>
</div>

<%= form_with(model: @user,local: true,class:"form-horizontal") do |f| %>
  <div class="row">
    <div class="col-sm-12 col-md-4">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class:"form-control", readonly: true %>
      </div>
      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address, class:"form-control", readonly: true %>
      </div>
      <div class="form-group">
        <%= f.label :phone %>
        <%= f.text_field :phone, class:"form-control",readonly: true %>
      </div>
      <div class="form-group">
        <%= f.label :state %>
        <%= f.text_field :state, rows: 2, class:"form-control", readonly: true %>
      </div>
      <div class="form-group">
        <%= f.label :city %>
        <%= f.text_field :city, rows: 2, class:"form-control", readonly: true %>
      </div>
      <div class="form-group">
        <%= f.label :country %>
        <input type ="text" readonly="true" value=<%= @user.country.name %>  class="form-control"/>
      </div>
    </div>
  </div>
<% end %>
<% if user_signed_in? && current_user.is_admin? %>
  <div class="row">
    <div class="col-12 text-center">
      <%= link_to("Edit Profile",edit_user_registration_path,class:"btn btn-outline-primary") %>
    </div>
  </div>
<% end %>
<hr/>
  <div class="row">
    <div class="col-12 text-center">
      <%= link_to "Back", :back,class:"btn btn-outline-secondary" %>
    </div>
  </div>
