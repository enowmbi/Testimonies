<p id="notice"><%= notice %></p>

<h1>Tags</h1>
<div class="text-center">
<%= link_to 'New Tag', new_tag_path,class:"btn btn-primary mb-4" %>
</div>
<table class="table table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= tag.description %></td>
        <td><%= link_to 'Show', tag, class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_tag_path(tag), class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag', new_tag_path,class:"btn btn-primary m-4" %>
