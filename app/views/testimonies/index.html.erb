<p id="notice"><%= notice %></p>

<h1>Testimonies</h1>
<div class="text-center">
  <%= link_to 'New Testimony', new_testimony_path, class:"btn btn-primary m-4" %>
  </div>
<table class="table table-responsive">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @testimonies.each do |testimony| %>
      <tr>
        <td><%= testimony.title %></td>
        <td><%= testimony.description %></td>
        <td><%= testimony.user.name %></td>
        <td><%= link_to 'Show', testimony, class:"btn btn-primary btn-sm"%></td>
        <td><%= link_to 'Edit', edit_testimony_path(testimony),class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', testimony, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Testimony', new_testimony_path, class:"btn btn-primary m-4" %>
